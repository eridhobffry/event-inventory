{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "eventforge-inventory",
  "buildCommand": "cd app && npm run build",
  "outputDirectory": "app/.next",
  "installCommand": "npm install && cd app && npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL (e.g., https://your-backend.railway.app)",
      "value": "https://your-backend-url.com"
    }
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_STACK_PROJECT_ID": "@stack-project-id",
      "NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY": "@stack-client-key",
      "STACK_SECRET_SERVER_KEY": "@stack-secret-key"
    }
  }
}

