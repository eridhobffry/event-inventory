# Database (Neon PostgreSQL)
# Get your connection string from: https://console.neon.tech
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# Neon Auth (Stack Auth powered)
# Get these from: Neon Console → Your Project → Authentication
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="your-stack-client-key"
STACK_SECRET_SERVER_KEY="your-stack-secret-key"

# API Configuration
# Generate a random 64-character hex string for production
API_KEY_SECRET="your-64-character-hex-string"
PORT=3001

# CORS Configuration
# Set this to your frontend URL in production
CORS_ORIGIN="http://localhost:3000"

# AI Services
# OpenAI API for embeddings and AI features
OPENAI_API_KEY="your-openai-api-key"

# Google Gemini API (optional, for free tier alternative)
GOOGLE_GEMINI_API_KEY="your-gemini-api-key"
